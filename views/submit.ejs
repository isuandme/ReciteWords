<% include include/header.ejs %>

    <form method="get" action="/test">
        <div class="container" style="padding-top: 4%">
            <h3>提交记录</h3>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>提交人</th>
                        <th>单元</th>
                        <th>提交时间</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i in submits) { %>
                        <tr>
                            <td><a href="/user/info?user=<%= submits[i].username %>"><%= submits[i].username %></a></td>
                            <td><%= submits[i].unit %></td>
                            <td><%= submits[i].time %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <ul class="pagination">
                <li class="page-item">
                    <li class="page-item">
                        <% let to = Number(now) - 1 %>
                        <% if(Number(to) < Number(1)) to = 1 %>
                        <a class="page-link" aria-label="Previous" href="/submissions?p=<%= to %>">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                </li>
                <% for(let i=1; i<=len; i++) { %>
                    <% if(i == now) { %>
                        <li class="page-item active">
                            <a class="page-link" href="/submissions?p=<%= i %>"><%= i %></a>
                        </li>
                    <% } else {%>
                        <li class="page-item">
                                <a class="page-link" href="/submissions?p=<%= i %>"><%= i %></a>
                            </li>
                    <% } %>
                <% } %>
                <li class="page-item">
                    <% to = Number(now) + 1 %>
                    <% if(Number(to) > Number(len)) to = len %>
                    <a class="page-link" aria-label="Next" href="/submissions?p=<%= to %>">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            </ul>
        </div>
    </form>

<% include include/footer.ejs %>