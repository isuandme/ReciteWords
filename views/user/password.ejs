<% include ./../include/header.ejs %>

<form method="post" action="/user/changepassword">
    <div class="container" style="padding-top: 5%">
        <div class="offset-md-2 col-md-8">
                <h3>账号管理</h3>
                <div class="card">
                        <% if(error.length > 0){ %>
                            <div class="alert alert-danger">
                                <%= error %>
                            </div>
                        <% } %>
                        <% if(success.length > 0){ %>
                            <div class="alert alert-success">
                                <%= success %>
                            </div>
                        <% } %>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="old">旧密码</label>
                                <input type="password" class="form-control" name="old" placeholder="输入旧密码.">
                            </div>
                            <div class="form-group">
                                <label for="new1">新密码</label>
                                <input type="password" class="form-control" name="new1" placeholder="输入新密码.">
                        </div>
                        <div class="form-group">
                                <label for="new2">确认密码</label>
                                <input type="password" class="form-control" name="new2" placeholder="再输入新密码.">
                        </div>
                            <button type="submit" class="btn btn-primary col-md-12">修改密码</button>
                        </div>
        </div>
    </div>
</form>

<% include ./../include/footer.ejs %>